alias s="git status --short"
alias m="git co master"
alias v="vim -c 'normal ,d' ."
alias t='python ~/t.py --task-dir ~/tasks --list tasks'
alias jack='ack --js'
alias pack='ack --php'
alias hack='ack --html'
alias l='ls -lrth'
alias dt='cd ~/Desktop && open .'

function push(){
    branch=`git rev-parse --abbrev-ref HEAD`
    if [ $branch == 'master' ]; then
        echo "DO NOT PUSH TO MASTER"
    else
        git push origin $branch
    fi
}

function pushf(){
    branch=`git rev-parse --abbrev-ref HEAD`
    if [ $branch == 'master' ]; then
        echo "DO NOT PUSH TO MASTER"
    else
        git push -f origin $branch
    fi
}

function pr(){
    remote=`git remote -v | grep origin | head -1 | awk '{print $2'} | sed 's/.*:\(.*\)*/\1/' | sed 's/\.git$//'`
    branch=`git rev-parse --abbrev-ref HEAD`
    open "https://github.com/$remote/compare/${1:-master}...$branch?expand=1&body=please%20review%0A-%20Fixes%0A%0A%23%23%23%23%23%20Dev%20tests%0A%23%23%23%23%23%20QA%20tests%0A&assignee=cead22"
}

